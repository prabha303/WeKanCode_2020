<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView
        android:id="@+id/all_trips_date_picker_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        app:cardCornerRadius="@dimen/_4sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:focusable="true"
        android:padding="@dimen/_4sdp"
        app:cardElevation="@dimen/_4sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:layout_height="match_parent"  >

            <TextView
                android:id="@+id/fuel_station_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Select Destination"
                android:gravity="left"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/title_color" />


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_height="match_parent"  >

            <TextView
                android:id="@+id/access_days_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="access_days_time"
                android:layout_weight="1"
                android:gravity="left"
                android:fontFamily="@font/roboto_light"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/text_2color" />

            <TextView
                android:id="@+id/date_last_confirmed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="date_last_confirmed"
                android:gravity="start"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/_4sdp"
                android:fontFamily="@font/roboto_light"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/text_2color" />

        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_height="match_parent"  >

                <TextView
                    android:id="@+id/facility_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="facility_type"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:fontFamily="@font/roboto_light"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/text_2color" />

                <TextView
                    android:id="@+id/intersection_directions"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="intersection_directions"
                    android:gravity="start"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:fontFamily="@font/roboto_light"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/text_2color" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_height="match_parent"  >

                <TextView
                    android:id="@+id/street_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="street_address"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:fontFamily="@font/roboto_light"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/text_2color" />

                <TextView
                    android:id="@+id/country"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="country"
                    android:gravity="start"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:fontFamily="@font/roboto_light"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/text_2color" />

            </LinearLayout>


        </LinearLayout>





    </androidx.cardview.widget.CardView>

